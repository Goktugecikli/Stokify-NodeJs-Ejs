<div class="container">
    <h2>Ürün Bilgi Giriş Formu</h2>
    <form id="productForm">
        <div class="form-group">
            <label for="operationType">İşlem Türü</label>
            <select id="operationType" name="operationType" onchange="handleOperationTypeChange()">
                <option value="">Seçiniz</option>
            </select>
        </div>
        <div class="form-group">
            <label for="productName">Ürün Adı</label>
            <input type="text" id="productName" name="productName" disabled>
        </div>
        <div class="form-group">
            <label for="brand">Marka</label>
            <input type="text" id="brand" name="brand" disabled>
        </div>
        <div class="form-group">
            <label for="barcode">Barkod No</label>
            <input type="text" id="barcode" name="barcode" disabled>
        </div>
        <div class="form-group" id="quantityGroup">
            <label for="quantity">Adet Sayısı</label>
            <input type="number" id="quantity" name="quantity" disabled>
        </div>
        <button  id="saveProduct">İşlemi Kaydet</button>
    </form>
</div>

