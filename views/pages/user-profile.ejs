<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="UserProfile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>
    <title>Sidebar menu</title>
</head>
<body id="body">
    <%- include('../partials/sidebar') %>
    <div class="page_container">
        <h1 class="detail">User Profile Page</h1>
        <br>
        <div class="company__info">
            <!-- <div class="company__title">
                <div class="company__pic">
                    <img src="/company_pp.jpg" class="company__pp" alt="">
                </div> -->
                <div class="detail">
                    <% if (companyData ) { %>
                        <div class="company__info">
                            <div class="">
                                <!-- <div class="company__pic">
                                    <img src="/company_pp.jpg" class="company__pp" alt="">
                                </div> -->
                                <div class="company__name">
                                    <h1 style="color: rgb(151, 9, 9); ">Company Name</h1>
                                    <hr>
                                    <div class="">
                                        <p class="user_details_value"><%= companyData.Name %></p>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="no-company-info">
                            <hr>
                            <p>Company information is not available.</p>
                            <hr>
                            <div class="button-container">
                                <div class="button-wrapper">
                                    <button class="button button-green" id="registerCompany">Register Your Company</button>
                                </div>
                                <div class="button-wrapper">
                                    <button class="button button-blue" id="joinButton">Join Compnay</button>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="company__details">
            <h1 style="">User Info</h1>
            <br>
    
            <div class="detail">
                <h2 class="user_details_label">Name Surname:</h2>
                <span class="user_details_value"><%= user.Firstname %> <%= user.LastName %></span>
            </div>
            <div class="detail">
                <h2 class="user_details_label">Email:</h2>
                <p class="user_details_value"><%= user.Email %></p>
            </div>
            <div class="detail">
                <h2 class="user_details_label">Username:</h2>
                <span class="user_details_value"><%= user.Username %></span>
            </div>
            <div class="detail">
                <h2 class="user_details_label">Password:</h2>
                <div class="password-container">
                    <input type="password" id="userPassword" class="user_details_value password-input" value="<%= user.Password %>" readonly>
                    <button class="toggle-password" onclick="togglePassword()">Show</button>
                </div>
            </div>
        </div>
    </div>
    <!-- MAIN JS -->
    <script src="/UserProfileScript.js"></script>
</body>
</html>